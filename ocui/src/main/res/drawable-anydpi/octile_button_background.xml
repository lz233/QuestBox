<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <corners android:radius="?attr/ocButtonBorderRadius"/>
                    <solid android:color="?attr/ocPrimaryButtonBackground"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="?attr/ocButtonBorderRadius"/>
                    <solid android:color="?attr/ocSecondaryButtonBackground"/>
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <drawable class="com.oculus.ocui.drawable.OCInteractionOverlayDrawable">
            <shape android:shape="rectangle">
                <corners android:radius="?attr/ocButtonBorderRadius"/>
                <solid android:color="@android:color/transparent"/>
            </shape>
        </drawable>
    </item>
</layer-list>