<?xml version="1.0" encoding="utf-8"?>
<com.oculus.ocui.OCPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4">

        <com.oculus.ocui.OCTileButton
            android:id="@+id/keyboardButton"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:minHeight="100dp"
            app:title="@string/main_keyboard"
            app:titleIcon="@drawable/oc_icon_keyboard_filled_24"
            app:titleTextSize="small"
            app:useBoldTitleText="true" />

        <com.oculus.ocui.OCTileButton
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:minHeight="100dp"
            android:visibility="invisible"
            app:title="title"
            app:titleIcon="@drawable/oc_icon_keyboard_filled_24"
            app:titleTextSize="small"
            app:useBoldTitleText="true" />

        <com.oculus.ocui.OCTileButton
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:minHeight="100dp"
            android:visibility="invisible"
            app:title="title"
            app:titleIcon="@drawable/oc_icon_keyboard_filled_24"
            app:titleTextSize="small"
            app:useBoldTitleText="true" />

        <com.oculus.ocui.OCTileButton
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            android:minHeight="100dp"
            android:visibility="invisible"
            app:title="title"
            app:titleIcon="@drawable/oc_icon_keyboard_filled_24"
            app:titleTextSize="small"
            app:useBoldTitleText="true" />
    </GridLayout>
</com.oculus.ocui.OCPanel>